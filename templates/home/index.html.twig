{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}


<div class="container">
    <h1>ACCUEIL BATI LAB | MAISONS BERDIN </h1>

<div class="card-deck">
    {% for house in houses %}


        <div class="d-inline-flex card" style="width: 18rem;">
        {% if  house.pictures is empty %}
            <img class="card-img-top" src="
            {{ asset('images/house-icone.png')}}"
                 alt="Maisons Berdin" width="100">
            {% else %}
                <img class="card-img-top" src="
            {{ asset('uploads/pictures/'~house.pictures[0].name)}}"
                     alt="Maisons Berdin" width="100">

{% endif %}




            <div class="card-body">
                <h5 class="card-title">{{ house.name }}</h5>

                    <ul class="card-text">
                    <li>Surface habtibale : {{ house.livingSpace }}</li>
                    <li> Chambres : {{ house.roomNumber }}</li>
                    <li> Prix TTC : {{ house.sellingPriceAti }}</li>
                </ul>

                <a href="{{ path('house_show', {'id': house.id}) }}" class="btn btn-outline-primary">Voir le Mod√®le</a>
            </div>
        </div>

{% endfor %}
</div>

</div>
{% endblock %}
