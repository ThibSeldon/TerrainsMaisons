{% extends 'base.html.twig' %}

{% block title %}Programmes{% endblock %}

{% block body %}
    <div class="container-fluid">
    <h1>Lotissement</h1>
<div class="row">
    <div class="col">
    <a href="{{ path('land_allotment_new') }}" class="btn btn-primary btn-block">Nouveau</a>
    </div>
</div>
    <table class="table table-sm table-hover table-bordered">
        <thead>
            <tr>

                <th>Name</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Nombre de Lots</th>
                <th>Date d'ajout</th>
                <th>Date de mise a jour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

        {% for allotment in allotments %}
            <tr>

                <td>{{ allotment.name }}</td>
                <td>{{ allotment.postalCode }}</td>
                <td>{{ allotment.city }}</td>
                <td>{{ allotment.plots.count }}</td>
                <td>{{ allotment.createdAt ? allotment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ allotment.updatedAt ? allotment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('land_allotment_show', {'id': allotment.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('land_allotment_edit', {'id': allotment.id}) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    </div>
{% endblock %}
