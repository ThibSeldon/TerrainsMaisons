{% extends 'base.html.twig' %}

{% block title %}House index
{% endblock %}



{% block body %}

	<style>
		div.searchCol {
			margin-top: 20px;
		}
		div.searchForm {
			margin-top: 20px;
				}
		div.listHouse{
			margin-top: 20px;
		}
	</style>

	<div class="container-fluid">
		<div class="row">
			<div class="searchCol col-sm-2">

					<div class="">
					<a href="{{ path('house_index')}}" class="myButton">
						<button class="btn btn-secondary btn-sm btn-block ">
							Toute les Maisons</button>
					</a>
					
				</div>

				<div class="searchForm">

				{% if form is defined %}

					{{ form_start(form) }}
					{{ form_widget(form) }}
					
					<button class="btn btn-success btn-sm btn-block">{{ button_label|default('Valider') }}</button>
					{{ form_end(form) }}

				{% endif %}
				</div>
			</div>

			<div class="listHouse col-sm-10">
				<table class="table table-hover table-sm table-bordered">
					<thead>
						<tr>

							<th>Mod√®le</th>
							<th>Type</th>
							<th>Surface Habitable</th>
							<th>Surface Annexe</th>
							<th>Chambres</th>
							<th>Salle de bains</th>
							<th>Prix de Vente TTC</th>
							<th>Marque</th>
							<th>Toiture</th>
							<th>Longeur</th>
							<th>Largeur</th>
							<th>Hauteur</th>

						</tr>
					</thead>
					<tbody>
						{% for house in houses %}
							<tr>

								<td>
									<a href="{{path('house_show', {'id': house.id}) }}">
										{{ house.name }}
										<a/></td>
								</td>
								<td>{{ house.houseModel.name }}</td>
								<td>{{ house.livingSpace }}</td>
								<td>{{ house.annexSurface }}</td>
								<td>{{ house.roomNumber }}</td>
								<td>{{ house.bathroomNumber }}</td>
								<td>{{ house.sellingPriceAti | format_currency('EUR') }}</td>
								<td>{{ house.houseBrand.name }}</td>
								<td>{{ house.houseRoofing.name }}</td>
								<td>{{ house.length }}</td>
								<td>{{ house.width }}</td>
								<td>{{ house.height }}</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="16">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}
