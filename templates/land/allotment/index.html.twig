{% extends 'base.html.twig' %}

{% block title %}Allotment index{% endblock %}

{% block body %}
    <div class="container">
    <h1>Lotissement</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for allotment in allotments %}
            <tr>
                <td>{{ allotment.id }}</td>
                <td>{{ allotment.name }}</td>
                <td>{{ allotment.postalCode }}</td>
                <td>{{ allotment.city }}</td>
                <td>{{ allotment.createdAt ? allotment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ allotment.updatedAt ? allotment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('land_allotment_show', {'id': allotment.id}) }}">show</a>
                    <a href="{{ path('land_allotment_edit', {'id': allotment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('land_allotment_new') }}">Create new</a>
    </div>
{% endblock %}
