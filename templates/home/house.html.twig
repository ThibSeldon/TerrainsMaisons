{% extends 'base_all.html.twig' %}

{% block title %}
Mod√®le {{ house.name }}
{% endblock %}

{% block body %}

    <div class="d-flex justify-content-center">
        <div class="">
            <h2>{{ house.name }} - {{ house.roomNumber }} Chambres</h2>
        </div>
    </div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        {% for picture in house.pictures %}
        <div class="carousel-item {% if loop.first %} active {% endif %} %}">
            <img class="d-block w-50" src="{{ asset('uploads/pictures/'~picture.name) }}" alt="First slide">
        </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="d-flex">
    <div class="col-sm-4"> {{ house.livingSpace }}</div>
    <div class="col-sm-4">{{ house.houseBrand.name }}</div>
    <div class="col-sm-4">{{ house.houseRoofing.name }}</div>

</div>

{% endblock %}