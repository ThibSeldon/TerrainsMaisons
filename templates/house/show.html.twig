{% extends 'base.html.twig' %}

{% block title %}House{% endblock %}

{% block body %}
    <h1>House</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ house.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ house.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ house.houseModel.name }}</td>
            </tr>
            <tr>
                <th>LivingSpace</th>
                <td>{{ house.livingSpace }}</td>
            </tr>
            <tr>
                <th>AnnexSurface</th>
                <td>{{ house.annexSurface }}</td>
            </tr>
            <tr>
                <th>RoomNumber</th>
                <td>{{ house.roomNumber }}</td>
            </tr>
            <tr>
                <th>BathroomNumber</th>
                <td>{{ house.bathroomNumber }}</td>
            </tr>
            <tr>
                <th>SellingPriceDf</th>
                <td>{{ house.sellingPriceDf }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ house.createdAt ? house.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ house.updatedAt ? house.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ house.houseBrand.name }}</td>
            </tr>
            <tr>
                <th>Roofing</th>
                <td>{{ house.houseRoofing.name }}</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>{{ house.length }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ house.width }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ house.height }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('house_index') }}">back to list</a>

    <a href="{{ path('house_edit', {'id': house.id}) }}">edit</a>

    {{ include('house/_delete_form.html.twig') }}
{% endblock %}
