{% extends 'base_all.html.twig' %}

{% block title %}
Modèle {{ house.name }}
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12 d-flex flex-column justify-content-center align-items-center">
            <h2>{{ house.name }} - {{ house.roomNumber }} Chambres</h2>
            <h3>A Partir de {{ house.sellingPriceAti | format_currency('EUR') }}</h3>

        </div>
    </div>
<div class="row justify-content-center">
    <div class=" col-12 col-xl-8 d-flex justify-content-center align-content-center">
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" >
        {% if house.pictures[0] is defined %}
        {% for picture in house.pictures %}
        <div class="carousel-item {% if loop.first %} active {% endif %} %}" >
            <img class="d-block img-fluid " src="{{ asset('uploads/pictures/'~picture.name) }}" alt="First slide">
        </div>
        {% endfor %}
        {% else %}
        <div class="carousel-item active">

            <img class="d-block w-100" src="{{ asset('images/house_base.jpeg') }}" alt="First slide">
        </div>
        {% endif %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
    </div>

    <div class=" col-12 col-xl-8 ">
        <h2>Caractéristiques de la maison</h2>
        <table class="table table-striped p-0 col-12">
            <tbody>
            <tr>
                <th>Surface Habitable</th>
                <td>{{ house.livingSpace }} m2</td>
            </tr>
            <tr>
                <th>Surface Annexe</th>
                <td>{{ house.annexSurface }}</td>
            </tr>
            <tr>
                <th>Chambres</th>
                <td>{{ house.roomNumber }}</td>
            </tr>
            <tr>
                <th>Salle de Bains</th>
                <td>{{ house.bathroomNumber }}</td>
            </tr>
            <tr>
                <th>Type de Maison</th>
                <td>{{ house.houseModel }}</td>
            </tr>
            <tr>
                <th>Style</th>
                <td>{{ house.houseStyle }}</td>
            </tr>
            <tr>
                <th>Type de Toiture</th>
                <td>{{ house.houseRoofing }}</td>
            </tr>
            <tr>
                <th>Prix TTC*</th>
                <td>{{ house.sellingPriceAti | format_currency('EUR') }}</td>
            </tr>
            <tr>
                <th>Construteur</th>
                <td><a href="{{ house.houseBrand.url }}" target="_blank">
                        <img src="{{ asset('uploads/pictures/'~ house.houseBrand.logo) }}" alt="Logo {{ house.houseBrand.name }}" width="250">
                    </a></td>
            </tr>

            </tbody>


        </table>

    </div>

</div>

    <div class="row flex-column justify-content-center align-items-center bg-light m-1">
        <h2 class="d-flex pt-5 col-12 col-lg-6 justify-content-center">En savoir plus</h2>

        <div class="col-12 col-lg-6">
