{% extends 'base_all.html.twig' %}

{% block description %}
    <!-- Meta Description -->
    <meta name="description" content="Catalogue de Maisons Individuelles par les constructeurs de Maisons dans la Marne et les Ardennes">
{% endblock %}

{% block title %}

{% endblock %}

{% block body %}


    <div class="jumbotron">
        <h1 class="">Catalogue de Maisons Neuves</h1>
        <h2>Modèles de maisons disponibles sur Terrains Maisons . com</h2>


        <p class="lead">Vous retrouverez l'ensemble des Maisons</p>
        <hr class="my-4">
        <p></p>
        <p>Outils et Algorithmes en BETA merci de nous signaler les incohérences</p>

    </div>



    <div class="row justify-content-center" id="house-list">
        {% for house in houses %}
            <div class="d-flex align-items-stretch col-12 col-lg-6 col-xl-4 mt-1">
                <div class="card">


                    {% if house.pictures[0] is defined %}
                        <a href="{{ path('all_house_show', {'id': house.id}) }}"> <img class="card-img-top"
                                                                                    src="{{ asset('uploads/pictures/'~house.pictures[0].name) | imagine_filter('heighten_filter') }}"
                                                                                    alt="{{ house.name }}"></a>
                    {% else %}
                        <a href="{{ path('all_house_show', {'id': house.id}) }}">
                            <img class="card-img-top" src="{{ asset('images/house_base.jpeg' | imagine_filter('heighten_filter')) }}"
                                 alt="{{ house.name }}">
                        </a>
                    {% endif %}

                    <div class="card-body">

                        <h4 class="card-title">{{ house.name }}</h4>


                        <ul class="list-group list-group-flush">

                            <li class="list-group-item">
                                Surface Habitable : {{ house.livingSpace }} m2
                            </li>
                            <li class="list-group-item">
                                Surface Annexe : {{ house.annexSurface }} m2
                            </li>
                            <li class="list-group-item">
                                {{ house.roomNumber }} Chambres
                            </li>
                            <li class="list-group-item">
                                {{ house.houseModel }}
                            </li>

                            <li class="list-group-item">
                                Maison Seule : {{ house.sellingPriceAti|number_format(0,'',' ') }} €
                            </li>
                            <li class="list-group-item ">
                                <img src="{{ asset('uploads/pictures/'~ house.houseBrand.logo) }}" alt="" width="250"
                                     class="img-fluid">
                            </li>

                        </ul>


                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="{{ path('all_house_show', {'id': house.id}) }}"
                           class="btn btn-secondary btn-block ">Voir le Projet de Construction</a>
                    </div>

                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}


