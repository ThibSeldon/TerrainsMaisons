{% extends 'base.html.twig' %}

{% block title %}Plot{% endblock %}

{% block body %}
    <div class="container">
        <h1>Plot</h1>
        <div class="d-flex flex-row mb-1">

            <a href="{{ path('land_plot_index') }}" class="btn btn-outline-info">Retour</a>

            <a href="{{ path('land_plot_edit', {'id': plot.id}) }}" class="btn btn-outline-warning">edit</a>

            {{ include('land/plot/_delete_form.html.twig') }}

        </div>

        <table class="table table-hover  table-sm">
            <tbody>
            <tr>
                <th>Lot</th>
                <td>{{ plot.lot }}</td>
            </tr>
            <tr>
                <th>Surface (m2)</th>
                <td>{{ plot.surface }}</td>
            </tr>
            <tr>
                <th>Largeur Facade (ml)</th>
                <td>{{ plot.facadeWidth }}</td>
            </tr>
            <tr>
                <th>Prix de vente</th>
                <td>{{ plot.sellingPriceAti | format_currency('EUR') }}</td>
            </tr>
            <tr>
                <th>Date de creation</th>
                <td>{{ plot.createdAt ? plot.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mise a jour</th>
                <td>{{ plot.updatedAt ? plot.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>

        </table>

        <div class="d-flex flex-column">
            <h3>Liste des Maisons Compatbiles (Beta à vérifier)</h3>
        </div>

        <hr/>

        <table class="table table-hover table-sm">


            <thead>
            <tr>
                <th>Modèle</th>
                <th>Surface Habitable (m2)</th>
                <th>Facade Maison (ml)</th>
                <th>Prix maison</th>
                <th>Prix avec terrain</th>

            </tr>
            </thead>
            <tbody>
            {% for house in houses %}
                <tr>
                    <td>
                        <a href="{{ path('house_show', { 'id': house.id }) }}"
                           class="btn btn-light"> {{ house.name }}</a>
                    </td>
                    <td>{{ house.livingSpace }}</td>
                    <td>{{ house.length }}</td>
                    <td>{{ house.sellingPriceAti | format_currency('EUR') }}</td>
                    <td>
                        {{ (house.sellingPriceAti + plot.sellingPriceAti) | format_currency('EUR') }}
                    </td>


                </tr>
            {% endfor %}
            

            </tbody>


        </table>

    </div>



    <style>
        hr {
            margin-top: 1rem;
            margin-bottom: 1rem;
            border: 0;
            border-top: 10px solid rgba(0, 0, 0, 0.1);
        }
    </style>
{% endblock %}
