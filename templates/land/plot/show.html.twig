{% extends 'base.html.twig' %}

{% block title %}Plot{% endblock %}

{% block body %}
    <div class="container">
    <h1>Plot</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plot.id }}</td>
            </tr>
            <tr>
                <th>Lot</th>
                <td>{{ plot.lot }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ plot.surface }}</td>
            </tr>
            <tr>
                <th>FacadeWidth</th>
                <td>{{ plot.facadeWidth }}</td>
            </tr>
            <tr>
                <th>SellingPriceAti</th>
                <td>{{ plot.sellingPriceAti }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ plot.createdAt ? plot.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ plot.updatedAt ? plot.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('land_plot_index') }}">back to list</a>

    <a href="{{ path('land_plot_edit', {'id': plot.id}) }}">edit</a>

    {{ include('land/plot/_delete_form.html.twig') }}
    </div>
{% endblock %}
