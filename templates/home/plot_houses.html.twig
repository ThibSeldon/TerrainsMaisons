{% extends 'base_all.html.twig' %}

{% block description %}
    <!-- Meta Description -->
    <meta name="description" content="Toutes les Maisons Compatibles pour le Lotissement {{ plot.allotment.name }} situé à {{ plot.allotment.city }} sur le terrain {{ plot.lot }}">
{% endblock %}

{% block title %}
    Terrain {{ plot.allotment.name }} - {{ plot.allotment.city }} - Lot n° {{ plot.lot }}
{% endblock %}

{% block body %}

    <div class="bg-light p-5">
        <h1 class="">{{ plot.allotment.name }}</h1>
        <h2>Lot n°: {{ plot.lot }} </h2>
        <h3>Prix : {{ plot.sellingPriceAti | number_format(0, '', ' ') }} €</h3>
        <h3>Surface : {{ plot.surface }} m2 </h3>
        <p class="lead">Découvrez les Maisons Neuves pour ce terrain</p>
        <hr class="my-4">
        <p>Vous trouverez ici toutes les maisons compatibles. Sous réserves de validation par nos partenaires
            fonciers. </p>
        <p>Outils et Algorithmes en BETA merci de nous signaler les incohérences</p>

    </div>

    <div class="row pt-3 pb-3 justify-content-center align-items-center" id="search-form">
                <div class="col-12 col-lg-4">
                    {{ form_errors(form) }}
                    {{ form_start(form) }}
                {{ form_widget(form.roomNumber, {'attr': {'class': 'form-select'}}) }}
                </div>

                 {{ form_row(form._token) }}
        <div class="col-12 col-lg-4 d-grid">
               <button class="btn  btn-success">{{ button_label|default('Valider') }}</button>
                {{ form_end(form, {'render_rest': false}) }}
        </div>

    </div>

    <div class="d-flex flex-row justify-content-center align-items-center p-2">

        <h2>Maisons Neuves Compatibles</h2>

    </div>

    <div class="row justify-content-center" id="house-list">
        {% for house in houses %}
            <div class="d-flex align-items-stretch col-12 col-lg-6 col-xl-4 mt-1">
                <div class="card">


                    {% if house.house.pictures[0] is defined %}
                        <a href="{{ path('all_ad_show', {'id': house.id}) }}"> <img class="card-img-top"
                                                                                    src="{{ asset('uploads/pictures/'~house.house.pictures[0].name) | imagine_filter('heighten_filter') }}"
                                                                                    alt="{{ house.house.name }}"></a>
                    {% else %}
                        <a href="{{ path('all_ad_show', {'id': house.id}) }}">
                            <img class="card-img-top"
                                 src="{{ asset('images/house_base.jpeg' | imagine_filter('heighten_filter')) }}"
                                 alt="{{ house.house.name }}">
                        </a>
                    {% endif %}

                    <div class="card-body">
                        <h4 class="card-title">Prix du projet
                            : {{ (house.house.sellingPriceAti + plot.sellingPriceAti) | number_format(0, '', ' ') }}
                            € </h4>
                        <h5 class="card-subtitle text-muted">{{ house.house.name }}</h5>


                        <ul class="list-group list-group-flush">

                            <li class="list-group-item">
                                Surface Habitable : {{ house.house.livingSpace }} m2
                            </li>
                            <li class="list-group-item">
                                Surface Annexe : {{ house.house.annexSurface }} m2
                            </li>
                            <li class="list-group-item">
                                {{ house.house.roomNumber }} Chambres
                            </li>
                            <li class="list-group-item">
                                {{ house.house.houseModel }}
                            </li>

                            <li class="list-group-item">
                                Maison Seule : {{ house.house.sellingPriceAti | number_format(0,'',' ' )}} €
                            </li>
                            <li class="list-group-item ">
                                <img src="{{ asset('uploads/pictures/'~ house.house.houseBrand.logo) }}" alt=""
                                     width="250"
                                     class="img-fluid">
                            </li>

                        </ul>


                    </div>
                    <div class="card-body d-flex align-items-end">
                        <a href="{{ path('all_ad_show', {'id': house.id}) }}"
                           class="btn btn-secondary  ">Voir le Projet de Construction</a>
                    </div>

                </div>
            </div>
        {% endfor %}
    </div>





    <div class="row d-flex flex-column justify-content-center align-items-center bg-light m-1">
        <h2 class="d-flex pt-5 col-12 col-lg-6 justify-content-center">En savoir plus</h2>

        <div class="col-12 col-lg-6 ">
            <!-- FORMULAIRE DE CONTACT HUBSPOT -->
