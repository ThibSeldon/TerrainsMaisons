{{ form_start(form) }}

<div class="row">

    <div class="col-sm-6">
        {{ form_row(form.name) }}
        {{ form_row(form.houseBrand) }}
        {{ form_row(form.houseModel) }}
        {{ form_row(form.houseRoofing) }}
        {{ form_row(form.livingSpace) }}
        {{ form_row(form.annexSurface) }}
        {{ form_row(form.roomNumber) }}
        {{ form_row(form.bathroomNumber) }}
        {{ form_row(form.sellingPriceDf) }}


    </div>

    <div class="col-sm-6">
        {{ form_row(form.length) }}
        {{ form_row(form.width) }}
        {{ form_row(form.height) }}
        {{ form_row(form.valid) }}
        <div class="row">
            <div class="col-8">
                {{ form_row(form.planFilename) }}
            </div>
            <div class="col-4">
                {{ form_row(form.deleteFile) }}
            </div>
        </div>
        {{ form_row(form.uploadPlan, {'attr': {'placeholder': 'Fichier' }}) }}
        {{ form_row(form.pictures, {'attr': {'placeholder': 'Images' }}) }}


        <div class="row">

            {% if app.request.attributes.get('_route') == 'house_edit' %}
                <h2>Images</h2>
                {% for picture in house.pictures %}
                    <div>
                        <img src="{{ asset('/uploads/pictures/'~picture.name) }}" alt="" width="150">

                        {# On ajoute un lien permettant de supprimer une image (sera géré en Ajax) #}
                        <a href="{{ path('house_delete_picture', {id: picture.id})}}" data-delete data-token="{{ csrf_token('delete' ~ picture.id )}}">Supprimer</a>
                    </div>
                {% endfor %}
            {% endif %}
        </div>

    </div>


</div>

<div class="row">
    <button class="btn btn-success btn-small btn-block">{{ button_label|default('Valider') }}</button>
</div>





{{ form_end(form) }}
