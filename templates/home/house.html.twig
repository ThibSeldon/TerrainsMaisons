{% extends 'base_all.html.twig' %}

{% block title %}
Modèle {{ house.name }}
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 d-flex flex-column justify-content-center align-items-center ">
            <h2>{{ house.name }} - {{ house.roomNumber }} Chambres</h2>
            <h3>A Partir de {{ house.sellingPriceAti | format_currency('EUR') }}</h3>
        </div>
    </div>
<div class="row">
    <div class="col-sm-8 d-flex flex-column justify-content-center align-content-center">
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        {% if house.pictures[0] is defined %}
        {% for picture in house.pictures %}
        <div class="carousel-item {% if loop.first %} active {% endif %} %}">
            <img class="d-block w-100" src="{{ asset('uploads/pictures/'~picture.name) }}" alt="First slide">
        </div>
        {% endfor %}
        {% else %}
        <div class="carousel-item active">

            <img class="d-block w-100" src="{{ asset('images/house_base.jpeg') }}" alt="First slide">
        </div>
        {% endif %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
    </div>

    <div class="col-sm-4">
        <h2>Caractéristiques de la maison</h2>
        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Surface Habitable</th>
                <td>{{ house.livingSpace }} m2</td>
            </tr>
            <tr>
                <th>Surface Annexe</th>
                <td>{{ house.annexSurface }}</td>
            </tr>
            <tr>
                <th>Chambres</th>
                <td>{{ house.roomNumber }}</td>
            </tr>
            <tr>
                <th>Salle de Bains</th>
                <td>{{ house.bathroomNumber }}</td>
            </tr>
            <tr>
                <th>Type de Maison</th>
                <td>{{ house.houseModel }}</td>
            </tr>
            <tr>
                <th>Style</th>
                <td>{{ house.houseStyle }}</td>
            </tr>
            <tr>
                <th>Type de Toiture</th>
                <td>{{ house.houseRoofing }}</td>
            </tr>
            <tr>
                <th>Prix TTC*</th>
                <td>{{ house.sellingPriceAti | format_currency('EUR') }}</td>
            </tr>
            <tr>
                <th>Construteur</th>
                <td>{{ house.houseBrand }}</td>
            </tr>

            </tbody>


        </table>

    </div>

</div>
    <div class="container mt-4 bg-light">
        <div class="row d-flex flex-row align-items-center"></div>

        <h5>En Savoir Plus</h5>
